<MainWindow>:
    name: "main"
    n: n
    f_st: f_st
    t_st: t_st
    date: date
    month: month
    day: day
    details: details
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDLabel:
        id: n
        halign: "left"
        pos_hint: {"center_x": 0.53,'center_y': .9297}
        text: "Hi,"
        font_name: "SPoppins"
        font_size: "37sp"
        color: rgba(0,0,0,255)
    MDTextField:
        id:f_st
        mode: "rectangle"
        hint_text: "From"
        helper_text: "Enter values in capital only"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .38, "center_y": .8}
        helper_text_mode: 'on_focus'
        size_hint: .13, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:t_st
        mode: "rectangle"
        hint_text: "To"
        helper_text: "Enter values in capital only"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .58, "center_y": .8}
        helper_text_mode: 'on_focus'
        size_hint: .13, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:date
        mode: "rectangle"
        hint_text: "Date"
        pos_hint: {"center_x": .4, "center_y": .7}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:month
        mode: "rectangle"
        hint_text: "Month"
        pos_hint: {"center_x": .6, "center_y": .7}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:day
        mode: "rectangle"
        hint_text: "Day"
        pos_hint: {"center_x": .4, "center_y": .6}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDFillRoundFlatButton:
        text :"Show"
        pos_hint: {"center_x": 0.6, "center_y": 0.595}
        font_size: "20sp"
        size_hint: .17, .06
        font_name: "BPoppins"
        md_bg_color: rgba(0,88,188,255)
        on_press:
            root.Show()
    MDIconButton:
        icon:"check-bold"
        pos_hint: {"center_x": 0.475, "center_y": 0.8}
        user_font_size: "35sp"
        on_press:
            root.check()
    MDIconButton:
        icon: "check-bold"
        pos_hint: {"center_x": 0.675, "center_y": 0.8}
        user_font_size: "35sp"
        on_press:
            root.check2()
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.963, "center_y": .05}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    MDIconButton:
        ripple_scale: 0
        icon: "home-outline"
        pos_hint: {"center_x": 0.96, "center_y": .95}
        user_font_size: "40sp"
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "choose"
    MDIconButton:
        ripple_scale: 0
        icon: "github"
        pos_hint: {"center_x": 0.96, "center_y": .13}
        user_font_size: "40sp"
        on_press:
            root.git()
    MDCard:  
        size_hint: (.45,.45)
        pos_hint: {"center_x": .5, "center_y": .28}
        md_bg_color: 1,1,1,1
        elevation: 2
        radius: [35,35,35,35]
        padding: 15
        ScrollView:
            MDList:
                id: details