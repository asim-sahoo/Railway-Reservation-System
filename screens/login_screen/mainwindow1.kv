<MainWindow1>:
    name: "main1"
    na: na
    p_n: p_n
    p_a: p_a
    Image:
        source: "screen.png"
        size_hint: 1.1, 1.1
        pos_hint: {"center_x": .5, "center_y": .5}
    MDLabel:
        id: na
        halign: "center"
        pos_hint: {"center_x": 0.5,'center_y': .85}
        text:
        font_name: "SPoppins"
        font_size: "20sp"
        color: rgba(0,0,0,255)
    MDTextField:
        id:p_n
        mode: "rectangle"
        hint_text: "Name"
        helper_text: "Enter your name"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .4, "center_y": .77}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDTextField:
        id:p_a
        mode: "rectangle"
        hint_text: "Age"
        helper_text: "Enter your age"
        helper_text_mode: "on_focus"
        pos_hint: {"center_x": .6, "center_y": .77}
        helper_text_mode: 'on_focus'
        size_hint: .17, .07
        cursor_color: 0,0,0,1
        cursor_width: "2sp"
        multiline: False
        background_color: 0,0,0,0
        padding: 15
        font_name: "SPoppins"
        font_size: "14sp"
        hint_text_color: rgba(3, 144, 252,255)
    MDRoundFlatButton:
        text :"Add Passenger"
        pos_hint: {"center_x": 0.4, "center_y": 0.67}
        font_size: "20sp"
        size_hint: .175, .06
        font_name: "BPoppins"
        text_color: rgba(0,88,188,255)
        line_color: rgba(0,88,188,255)
        on_press:
            root.add_p()
    MDFillRoundFlatButton:
        text :"Proceed"
        pos_hint: {"center_x": 0.6, "center_y": 0.67}
        font_size: "20sp"
        size_hint: .175, .06
        font_name: "BPoppins"
        md_bg_color: rgba(0,88,188,255)
        on_press:
            root.manager.transition.direction = "left"
            root.manager.current = "pay"
    MDCard:    
        size_hint: (.3,.45)
        pos_hint: {"center_x": .5, "center_y": .37}
        md_bg_color: 1,1,1,1
        elevation: 10
        radius: [35,35,35,35]
        padding: 15
        GridLayout:
            id: passenger
            cols: 1
    MDIconButton:
        icon:"logout"
        pos_hint: {"center_x": 0.963, "center_y": .05}
        user_font_size: "40sp"
        on_release:
            root.manager.current = "loginscreen2"
            root.manager.transition.direction = "down"
    MDIconButton:
        ripple_scale: 0
        icon: "home-outline"
        pos_hint: {"center_x": 0.96, "center_y": .95}
        user_font_size: "40sp"
        on_press:
            root.manager.transition.direction = "right"
            root.manager.current = "choose"
    MDIconButton:
        ripple_scale: 0
        icon: "github"
        pos_hint: {"center_x": 0.96, "center_y": .13}
        user_font_size: "40sp"
        on_press:
            root.git()